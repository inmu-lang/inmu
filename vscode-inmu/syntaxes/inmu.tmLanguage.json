{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "INMU",
  "scopeName": "source.inmu",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#functions"
    },
    {
      "include": "#variables"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.inmu",
          "match": "#.*$"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.inmu",
          "match": "\\b(if|else|while|for|break|continue|return|match)\\b"
        },
        {
          "name": "keyword.other.inmu",
          "match": "\\b(let|const|mut|fn|struct|enum|import|export|as|in)\\b"
        },
        {
          "name": "constant.language.inmu",
          "match": "\\b(true|false|null|nil)\\b"
        },
        {
          "name": "storage.type.inmu",
          "match": "\\b(int|float|string|bool|array|hash)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.inmu",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.inmu",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.inmu",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.inmu",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.inmu",
          "match": "\\b\\d+\\.\\d+\\b"
        },
        {
          "name": "constant.numeric.integer.inmu",
          "match": "\\b\\d+\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.arithmetic.inmu",
          "match": "\\+|\\-|\\*|\\/|%"
        },
        {
          "name": "keyword.operator.comparison.inmu",
          "match": "==|!=|<=|>=|<|>"
        },
        {
          "name": "keyword.operator.logical.inmu",
          "match": "&&|\\|\\||!"
        },
        {
          "name": "keyword.operator.assignment.inmu",
          "match": "="
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "support.function.inmu",
          "match": "\\b(print|assert|assert_ne|debug|trace)\\b"
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.other.inmu",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  }
}
